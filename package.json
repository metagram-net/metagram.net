    "select2": "^4.0.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.47.0",
    "esbuild": "^0.16.10",
    "esbuild-sass-plugin": "^2.4.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.8.1",
    "tailwindcss": "^3.2.4"
  }
}
