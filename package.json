{
  "name": "metagram-net",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "tailwindcss --input css/index.css --output dist/css/index.css",
    "build-js": "node build.mjs",
    "format": "prettier --write js metagram_server/src",
    "format-check": "prettier --check js metagram_server/src",
    "lint": "eslint js metagram_server/src"
  },
  "dependencies": {
    "jquery": "^3.7.0",
    "select2": "^4.0.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.19.2",
    "esbuild-sass-plugin": "^2.13.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "3.0.2",
    "tailwindcss": "^3.3.3"
  }
}
