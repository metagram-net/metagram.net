{
  "name": "metagram-net",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "tailwindcss --input css/index.css --output dist/css/index.css",
    "build-js": "node build.mjs",
    "format": "prettier --write js metagram_server/src",
    "format-check": "prettier --check js metagram_server/src",
    "lint": "eslint js metagram_server/src"
  },
  "dependencies": {
    "jquery": "^3.7.0",
    "select2": "^4.0.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.62.0",
    "esbuild": "^0.18.11",
    "esbuild-sass-plugin": "^2.10.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "3.0.0",
    "tailwindcss": "^3.3.2"
  }
}
